{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "baseUrl": "src/",
        "rootDir": "./src",
    },
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "./node_modules/**/*",
        "./__mocks__/**/*",
        "./src/__mocks__/**/*",
        "./src/__mocks__/*"
    ]
}