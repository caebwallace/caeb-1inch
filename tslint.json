{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "dist",
            "__mocks__",
            "src/*.spec.*",
            "src/*.test.*"
        ]
    },
    "jsRules": {},
    "rules": {
        "indent": [
            "error",
            4
        ],
        "padded-blocks": [
            "error",
            {
                "classes": "always",
                "switches": "always"
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "brace-style": [
            "error",
            "stroustrup"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "no-cond-assign": [
            "error",
            "always"
        ],
        "space-before-function-paren": [
            "error",
            "always"
        ],
        "no-console": [
            true,
            "debug",
            "log",
            "time",
            "timeEnd",
            "trace"
        ]
    },
    "rulesDirectory": []
}